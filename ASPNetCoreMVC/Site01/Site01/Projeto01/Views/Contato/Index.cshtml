@{
    Layout = "_Layout";
}
@{
    ViewBag.Title = "Palavra - Contato";
}
<form method="post" action="recebercontato">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" name="nome" value="@ViewBag.Contato.Nome" class="form-control" id="nome" placeholder="Digite seu nome">
        @Html.ValidationMessage("nome")
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" name="email" value="@ViewBag.Contato.Email" class="form-control" id="email" placeholder="Digite seu email">
        @Html.ValidationMessage("email")
    </div>

    <div class="form-group">
        <label for="assunto">Assunto</label>
        <input type="text" name="assunto" value="@ViewBag.Contato.Assunto" class="form-control" id="assunto" placeholder="Digite o assunto">
        @Html.ValidationMessage("assunto")
    </div>

    <div class="form-group">
        <label for="mensagem">Mensagem</label>
        <textarea name="mensagem" class="form-control" id="mensagem" placeholder="Digite sua mensagem">
                  @ViewBag.Contato.Mensagem
                </textarea>
        @Html.ValidationMessage("mensagem")
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
</form>

@ViewBag.Mensagem

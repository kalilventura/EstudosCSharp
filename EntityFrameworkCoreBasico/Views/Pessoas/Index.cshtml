@model IEnumerable<EntityFrameworkCore.Models.Pessoa>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-controller="PessoasFisica">Create New Pessoa Fisica</a><br />
    <a asp-action="Create" asp-controller="PessoasJuridica">Create New Pessoa Juridica</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CpfCnpj)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CpfCnpj)
                </td>
                <td>
                    @if (item is PessoaJuridica)
                    {
                        <div>
                            <a asp-controller="PessoasJuridica" asp-action="Edit" asp-route-id="@item.PessoaId">Edit</a> |
                            <a asp-controller="PessoasJuridica" asp-action="Details" asp-route-id="@item.PessoaId">Details</a> |
                            <a asp-controller="PessoasJuridica" asp-action="Delete" asp-route-id="@item.PessoaId">Delete</a>
                        </div>
                    }
                    else if (item is PessoaFisica) {
                        <div>
                            <a asp-controller="PessoasFisica" asp-action="Edit" asp-route-id="@item.PessoaId">Edit</a> |
                            <a asp-controller="PessoasFisica" asp-action="Details" asp-route-id="@item.PessoaId">Details</a> |
                            <a asp-controller="PessoasFisica" asp-action="Delete" asp-route-id="@item.PessoaId">Delete</a>
                        </div>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
